@model TL13Shop.Models.CheckoutViewModel
@{
	ViewData["Title"] = "Checkout";
}

<!-- Page Header Start -->
<div class="container-fluid bg-secondary mb-5">
	<div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
		<h1 class="font-weight-semi-bold text-uppercase mb-3">Checkout</h1>
		<div class="d-inline-flex">
			<p class="m-0"><a asp-action="Index" asp-controller="Home">Home</a></p>
			<p class="m-0 px-2">-</p>
			<p class="m-0">Checkout</p>
		</div>
	</div>
</div>
<!-- Page Header End -->
<!-- Checkout Start -->
<div class="container-fluid pt-5">
	<form asp-action="CheckOut" asp-controller="Cart" enctype="multipart/form-data">
		<div class="row px-xl-5">
			<div class="col-lg-8">
				<div class="mb-4">
					<h4 class="font-weight-semi-bold mb-4">Billing Address</h4>
					<div class="row">

						<div class="col-md-12 form-group">
							<label asp-for="@Model.CustomerName"></label>
							<input asp-for="@Model.CustomerName" class="form-control" placeholder="Full Name">
							<span asp-validation-for="@Model.CustomerName" class="text-danger"></span>
						</div>
						<div class="col-md-12 form-group">
							<label asp-for="@Model.CustomerPhone"></label>
							<input asp-for="@Model.CustomerPhone" class="form-control" placeholder="Phone Number">
							<span asp-validation-for="@Model.CustomerPhone" class="text-danger"></span>
						</div>
						<div class="col-md-12 form-group">
							<label asp-for="@Model.CustomerAddress"></label>
							<input asp-for="@Model.CustomerAddress" class="form-control" placeholder="Address">
							<span asp-validation-for="@Model.CustomerAddress" class="text-danger"></span>
						</div>
						<div class="col-md-12 form-group">
							<label asp-for="@Model.Note"></label>
							<input asp-for="@Model.Note" class="form-control" placeholder="Note">
							<span asp-validation-for="@Model.Note" class="text-danger"></span>
						</div>
					</div>
				</div>
			</div>
			<div class="col-lg-4">
				<div class="card border-secondary mb-5">
					<div class="card-header bg-secondary border-0">
						<h4 class="font-weight-semi-bold m-0">Order Total</h4>
					</div>
					<div class="card-body">
						<h5 class="font-weight-medium mb-3">Products</h5>
						@foreach (var item in Model.CartItems)
						{
							<div class="d-flex justify-content-between">
								<p>@item.ProductName</p>
								<p>@item.Price</p>
							</div>
						}
						<hr class="mt-0">
						<div class="d-flex justify-content-between mb-3 pt-1">
							<h6 class="font-weight-medium">Subtotal</h6>
							<h6 class="font-weight-medium">@Model.CartItems.Sum(p => p.Total)</h6>
						</div>
						<div class="d-flex justify-content-between">
							<h6 class="font-weight-medium">Shipping</h6>
							<h6 class="font-weight-medium">$10</h6>
						</div>
					</div>
					<div class="card-footer border-secondary bg-transparent">
						<div class="d-flex justify-content-between mt-2">
							<h5 class="font-weight-bold">Total</h5>
							<h5 class="font-weight-bold">@Model.CartItems.Sum(p => p.Total)</h5>
						</div>
					</div>
				</div>
				<div class="card border-secondary mb-5">
					<div class="card-header bg-secondary border-0">
						<h4 class="font-weight-semi-bold m-0">Payment</h4>
					</div>
					<div class="card-body">
						<div class="form-group">
							<div class="custom-control custom-radio">
								<input type="radio" class="custom-control-input" name="payment" id="paypal">
								<label class="custom-control-label" for="paypal">Paypal</label>
							</div>
						</div>
						<div class="form-group">
							<div class="custom-control custom-radio">
								<input type="radio" class="custom-control-input" name="payment" id="directcheck">
								<label class="custom-control-label" for="directcheck">Direct Check</label>
							</div>
						</div>
						<div class="">
							<div class="custom-control custom-radio">
								<input type="radio" class="custom-control-input" name="payment" id="banktransfer">
								<label class="custom-control-label" for="banktransfer">Bank Transfer</label>
							</div>
						</div>
					</div>
					<div class="card-footer border-secondary bg-transparent">
						<button type="submit" class="btn btn-lg btn-block btn-primary font-weight-bold my-3 py-3">Place Order</button>
					</div>
				</div>
			</div>
		</div>
	</form>
</div>
<!-- Checkout End -->